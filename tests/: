<!DOCTYPE html>
<?php 
$len = 10;
$wid = 10;
$hei = 10;
$supFond = $len * $wid;
$supc1 = 2*($len*$hei);
$supc2 = 2*($wid*$hei);
$order = array(
  "bot" => $supFond,
  "c1" => $supc1,
  "c2" => $supc2,
);
asort($order);
foreach ($order as $key=>$val) {
  if ($key == "bot") {
    $order[$key] = array($len,$wid);
  } else if ($key == "c1") {
    $order[$key] = array($len,$hei);
  } else {
    $order[$key] = array($wid,$hei);
  }
  sort($order[$key]);
}

?>
<html>
<body>
<svg width="100%" height="100%">
   <defs>
      <pattern id="smallGrid" width="1" height="10" patternUnits="userSpaceOnUse">
        <path d="M 10 0 L 0 0 0 10" fill="none" stroke="gray" stroke-width="0.5"/>
      </pattern>
      <pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse">
        <rect width="100" height="100" fill="url(#smallGrid)"/>
        <path d="M 100 0 L 0 0 0 100" fill="none" stroke="gray" stroke-width="1"/>
      </pattern>
    </defs>
    <rect width="100%" height="100%" fill="url(#grid)" />
<?php
  $i=0;
if (($len == $wid)&&($wid == $hei)) {
  for ($i=0;$i<3;$i++) {
    echo "<path d= '  M ".(10+$i*$len).",10 l ".$len.",0 l 0,".$len." l ".(-$len).",0  L ".(10+$i*$len).",10'  fill='none' stroke='black' stroke-width='1' />";
  }
  for ($i=0;$i<2;$i++) {
    echo "<path d= '  M ".(10+$i*$len).",".(10+$len)." l ".$len.",0 l 0,".$len." l ".(-$len).",0  L ".(10+$i*$len).",".(10+$len)."'  fill='none' stroke='black' stroke-width='1' />";
  }
} else {
  if ($order[0] == "bot") {
    echo "<path d= '  M 10,10 l ".$order["bot"][0].",0 l 0,".$order["bot"][1]." l ".(-$order["bot"][0]).",0  L 10,10'  fill='none' stroke='black' stroke-width='1' />";
    for ($i=0;$i<2;$i++) {
      echo "<path d= '  M ".$order[0][0].",10 l ".$order[1][0].",0 l 0,".$order[1][1]." l ".(-$order[1][0]).",0  L ".$order[0][0].",10'  fill='none' stroke='black' stroke-width='1' />";
    }
    if ($order[1][0] > $order[0][1]) {
      for ($i=0;$i<2;$i++) {
        echo "<path d= '  M 10,".($order[0][1]+$i*$order[0][1])." l ".$order[2][0].",0 l 0,".$order[2][1]." l ".(-$order[2][0]).",0  L 10,".($order[0][1]+$i*$order[0][1])."'  fill='none' stroke='black' stroke-width='1' />";
      }
    } else {
      for ($i=0;$i<2;$i++) {
        echo "<path d= '  M ".$order[0][0].",".($order[1][0]+$i*$order[1][0])." l ".$order[2][0].",0 l 0,".$order[2][1]." l ".(-$order[2][0]).",0  L 10,".($order[1][0]+$i*$order[1][0])."'  fill='none' stroke='black' stroke-width='1' />";
      }
    }
  } else if ($order[1] == "bot") {
    for ($i=0;$i<2;$i++) {
      echo "<path d= '  M 10,".(10+$i*$order[0][1])." l ".$order[0][0].",0 l 0,".$order[0][1]." l ".(-$order[0][0]).",0  L 10,".(10+$order[0][1])."'  fill='none' stroke='black' stroke-width='1' />";
    }
    echo "<path d= '  M ".$order[0][0].",10 l ".$order["bot"][1].",0 l 0,".$order["bot"][0]." l ".(-$order["bot"][1]).",0  L ".$order[0][0].",10'  fill='none' stroke='black' stroke-width='1' />";
    if ($order[1][0] > $order[0][1]) {
      for ($i=0;$i<2;$i++) {
        echo "<path d= '  M 10,".($order[0][1]+$i*$order[0][1])." l ".$order[2][0].",0 l 0,".$order[2][1]." l ".(-$order[2][0]).",0  L 10,".($order[0][1]+$i*$order[0][1])."'  fill='none' stroke='black' stroke-width='1' />";
      }
    } else {
      for ($i=0;$i<2;$i++) {
        echo "<path d= '  M ".$order[0][0].",".($order[1][0]+$i*$order[1][0])." l ".$order[2][0].",0 l 0,".$order[2][1]." l ".(-$order[2][0]).",0  L 10,".($order[1][0]+$i*$order[1][0])."'  fill='none' stroke='black' stroke-width='1' />";
      }
    }
  } else {
    for ($i=0;$i<2;$i++) {
      echo "<path d= '  M 10,".(10+$i*$order[0][1])." l ".$order[0][0].",0 l 0,".$order[0][1]." l ".(-$order[0][0]).",0  L 10,".(10+$order[0][1])."'  fill='none' stroke='black' stroke-width='1' />";
    }
    for ($i=0;$i<2;$i++) {
      echo "<path d= '  M ".$order[0][0].",10 l ".$order[1][0].",0 l 0,".$order[1][1]." l ".(-$order[1][0]).",0  L ".$order[0][0].",10'  fill='none' stroke='black' stroke-width='1' />";
    }
    if ($order[1][0] > $order[0][1]) {
      echo "<path d= '  M 10,".$order[0][1]." l ".$order[2][0].",0 l 0,".$order[2][1]." l ".(-$order[2][0]).",0  L 10,".$order[0][1]."'  fill='none' stroke='black' stroke-width='1' />";
      } else {
      echo "<path d= '  M ".$order[0][0].",".$order[1][0]." l ".$order[2][0].",0 l 0,".$order[2][1]." l ".(-$order[2][0]).",0  L 10,".$order[1][0]."'  fill='none' stroke='black' stroke-width='1' />";
      }

  }
?>
  </svg>
</body>
</html>
